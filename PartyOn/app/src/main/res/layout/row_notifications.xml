<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_small"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:id="@+id/row_avatar"
                android:src="@drawable/profile_placeholder_2"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What should be here??"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_toEndOf="@id/row_avatar"
                android:layout_marginStart="20dp"
                android:id="@+id/row_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_loading"
                android:layout_toEndOf="@id/row_avatar"
                android:layout_below="@id/row_title"
                android:layout_marginStart="20dp"
                android:id="@+id/row_message"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>