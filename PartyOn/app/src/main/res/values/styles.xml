    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>  <!-- TODO -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>  <!-- TODO -->
        <item name="colorControlHighlight">#076b9a</item>  <!-- TODO -->
